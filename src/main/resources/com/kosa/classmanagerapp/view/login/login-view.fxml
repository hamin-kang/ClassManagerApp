<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="root"
            fx:controller="com.kosa.classmanagerapp.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="15" alignment="CENTER" maxWidth="300">
        <Label text="Username 입력" style="-fx-font-size: 16px;" />

        <TextField fx:id="usernameField"
                   promptText="username"
                   prefWidth="180" />


        <Button text="확인"
                onAction="#onLoginButtonClick"
                prefWidth="100"
                styleClass="black-button"/>


    </VBox>

</StackPane>
